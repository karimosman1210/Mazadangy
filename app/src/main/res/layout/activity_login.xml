<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shakosh"
    tools:context=".gui.login.LoginActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C3000000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/icon_mzad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/title_font"
                android:paddingRight="18dp"
                android:text="البريد الألكتروني"
                android:textColor="#fff"
                android:textSize="26sp" />

            <EditText
                android:id="@+id/emailLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/input_et"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:padding="14dp"
                android:textColor="@color/dark_white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/title_font"
                android:paddingRight="18dp"
                android:text="كلمة المرور"
                android:textColor="#fff"
                android:textSize="26sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/input_et"
                android:ems="10"
                android:id="@+id/passLogin"
                android:inputType="textPassword"
                android:padding="14dp"
                android:textColor="@color/dark_white" />

            <Button
                android:id="@+id/rBtnLogin"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:background="@drawable/btn_radius"
                android:fontFamily="@font/description_font"
                android:text="التالي"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/description_font"
                android:gravity="center"
                android:text="عمل حساب جديد"
                android:textColor="@color/dark_white"
                android:textSize="25sp"
                android:id="@+id/newAccTv"/>

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/description_font"
                android:gravity="center"
                android:text="زياره عامه"
                android:textColor="@color/dark_white"
                android:textSize="25sp" />
        </LinearLayout>

    </ScrollView>


</FrameLayout>