<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackColor"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:text="تفير كلمه المرور "
        android:layout_gravity="center"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="22sp"/>

    <EditText
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/input_et"
        android:fontFamily="@font/sub_title_font"
        android:gravity="end"
        android:hint="كلمه المرور "
        android:inputType="phone"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="@color/dark_white"
        android:textColorHint="@color/dark_white" />

    <EditText
        android:id="@+id/etPasswordEditProfileActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/input_et"
        android:fontFamily="@font/sub_title_font"
        android:gravity="end"
        android:hint="كلمة المرورالجديده"
        android:inputType="textPassword"
        android:maxLines="1"
        android:nextFocusDown="@id/confirmPassTv"
        android:padding="10dp"
        android:textColor="@color/dark_white"
        android:textColorHint="@color/dark_white"
        />

    <EditText
        android:id="@+id/etConfirmPasswordEditProfileActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/input_et"
        android:fontFamily="@font/sub_title_font"
        android:gravity="end"
        android:hint="تأكيد كلمة المرورالجديده"
        android:inputType="textPassword"
        android:maxLines="1"
        android:nextFocusDown="@id/phoneTv"
        android:padding="10dp"
        android:textColor="@color/dark_white"
        android:textColorHint="@color/dark_white"
        />

    <Button
        android:id="@+id/btnchangepss"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        android:background="@drawable/btn_radius"
        android:fontFamily="@font/description_font"
        android:text="حفظ"
        android:textColor="#fff"
        android:textSize="25sp"
        android:textStyle="bold" />


</LinearLayout>


