<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shakosh"
    tools:context=".gui.signup.SignUpActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C3000000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/description_font"
                android:gravity="center"
                android:text="عمل حساب جديد"
                android:textColor="@color/dark_white"
                android:textSize="28sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/dark_white" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <EditText
                    android:id="@+id/lNameEt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="50"
                    android:background="@drawable/input_et"
                    android:fontFamily="@font/sub_title_font"
                    android:hint="الاسم الثاني"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/dark_white"
                    android:textColorHint="@color/dark_white" />

                <EditText
                    android:id="@+id/firstName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="50"
                    android:background="@drawable/input_et"
                    android:fontFamily="@font/sub_title_font"
                    android:hint="الاسم الأول"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:nextClusterForward="@id/lNameEt"
                    android:padding="10dp"
                    android:textColor="@color/dark_white"
                    android:textColorHint="@color/dark_white" />
            </LinearLayout>

            <EditText
                android:id="@+id/nickName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/input_et"
                android:fontFamily="@font/sub_title_font"
                android:hint="الأسم المستعار"
                android:inputType="text"
                android:maxLines="1"
                android:nextFocusDown="@id/confirmPassTv"
                android:padding="10dp"
                android:textColor="@color/dark_white"
                android:textColorHint="@color/dark_white" />

            <EditText
                android:id="@+id/emailTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/input_et"
                android:ems="10"
                android:fontFamily="@font/sub_title_font"
                android:hint="البريد الألكتروني"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:nextFocusDown="@id/passwordTv"
                android:padding="10dp"
                android:textColor="@color/dark_white"
                android:textColorHint="@color/dark_white" />

            <EditText
                android:id="@+id/passwordTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/input_et"
                android:fontFamily="@font/sub_title_font"
                android:gravity="end"
                android:hint="كلمة المرور"
                android:inputType="textPassword"
                android:maxLines="1"
                android:nextFocusDown="@id/confirmPassTv"
                android:padding="10dp"
                android:textColor="@color/dark_white"
                android:textColorHint="@color/dark_white" />

            <EditText
                android:id="@+id/confirmPassTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/input_et"
                android:fontFamily="@font/sub_title_font"
                android:gravity="end"
                android:hint="تأكيد كلمة المرور"
                android:inputType="textPassword"
                android:maxLines="1"
                android:nextFocusDown="@id/phoneTv"
                android:padding="10dp"
                android:textColor="@color/dark_white"
                android:textColorHint="@color/dark_white" />

            <EditText
                android:id="@+id/phoneTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/input_et"
                android:fontFamily="@font/sub_title_font"
                android:gravity="end"
                android:hint="رقم الهاتف"
                android:inputType="phone"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@color/dark_white"
                android:textColorHint="@color/dark_white" />

            <EditText
                android:id="@+id/interistTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/input_et"
                android:fontFamily="@font/sub_title_font"
                android:hint="مهتم ب"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@color/dark_white"
                android:textColorHint="@color/dark_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/othertChB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:buttonTint="@color/dark_white"
                    android:layoutDirection="rtl"
                    android:text="سلع اخري "
                    android:textColor="@color/dark_white"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/antekatChB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:buttonTint="@color/dark_white"
                    android:layoutDirection="rtl"
                    android:text="هوايات و انتيكات "
                    android:textColor="@color/dark_white"
                    android:textSize="18sp" />
            </LinearLayout>

            <Button

                android:id="@+id/signUpBtn"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:background="@drawable/btn_radius"
                android:fontFamily="@font/description_font"
                android:text="التالي"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>

</FrameLayout>